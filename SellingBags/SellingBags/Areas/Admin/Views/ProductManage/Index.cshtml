@model SellingBags.Areas.Admin.Models.ViewModel.ProductVM

@using SellingBags.Common
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="m-0 font-weight-bold">Tất cả sản phẩm</h5>
        </div>
        <div class="card-body">
            <div class="w-100 mb-4">
                @Html.ActionLink("Thêm mới", "Create", "ProductManage", null, new { @class = "btn btn-success" })
            </div>
            <div class="table-responsive">
                <table class="table table-bordered mt-2" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Màu</th>
                            <th>Size</th>
                            <th>Giá</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model.ProductsAll)
                            {
                                <tr>
                                    <td><img width="100" src="~/Assets/images/products/@item.ImageURL" alt="@item.Name"></td>
                                    <td>@item.Name.Trim()</td>
                                    <td>Màu @item.Color</td>
                                    <td>Size @item.Size</td>
                                    <td>@Converts.convertVND(item.Price)</td>
                                    <td>
                                        <a href="@Url.Action("Detail", "ProductManage", new {ID_Product = item.ID_Product})" class="btn btn-info w-100">Xem</a><br />
                                        <a href="@Url.Action("Update", "ProductManage", new {ID_Product = item.ID_Product})" class="btn btn-warning w-100 mt-2 mb-2">Sửa</a><br />
                                        <button class="btn btn-danger w-100 deleteProduct" data-id="@item.ID_Product">Xóa</button>
                                    </td>
                                </tr>

                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Xác nhận xóa Popup -->
    <div id="deleteConfirmPopup" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xác nhận xóa</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc muốn xóa sản phẩm này?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Xóa</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('.deleteProduct').on('click', function () {
            var id = $(this).attr('data-id');

            $('#deleteConfirmPopup').modal('show');

            $('#confirmDeleteBtn').off('click').on('click', function () {
                $.ajax({
                    url: '@Url.Action("Delete", "ProductManage")', 
                    type: 'POST',
                    data: { ID_Product: id }, 
                    success: function (response) {
                        if (response.result) {
                            alert('Xóa thành công');
                            location.reload(); 
                        } else {
                            alert('Xóa không thành công: ' + response.message);
                        }
                    },
                    error: function () {
                        alert('Có lỗi xảy ra khi xóa');
                    }
                });

                $('#deleteConfirmPopup').modal('hide');
            });
        });
    });
</script>
