@model SellingBags.Areas.Admin.Models.ViewModel.BrandVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tất cả thương hiệu</h1>
    <p class="mb-4">
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="w-100 mb-3">
                @Html.ActionLink("Thêm mới", "Create", "BrandManage", null, new { @class = "btn btn-success" })
            </div>
            <div class="table-responsive">
                <table class="table table-bordered mt-2" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>Tên thương hiệu</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @{
                        foreach (var item in Model.Brands)
                        {
                            <tr>
                                <td><img width="110" src="~/Assets/images/brands/@item.ImageURL" alt="@item.Name"></td>
                                <td>@item.Name.Trim()</td>
                                <td>
                                    <a href="@Url.Action("Detail", "BrandManage", new {ID_Brand = item.ID_Brand.Trim()})" class="btn btn-info"><i class="fas fa-eye"></i></a><br />
                                    <a href="@Url.Action("Update", "BrandManage", new {ID_Brand = item.ID_Brand.Trim()})" class="btn btn-warning mt-2 mb-2"><i class="fas fa-edit"></i></a><br />
                                    <button class="btn btn-danger pr-3 deleteBrand" data-id="@item.ID_Brand"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Xác nhận xóa Popup -->
    <div id="deleteConfirmPopup" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xác nhận xóa</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc muốn xóa thương hiệu này?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Xóa</button>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.deleteBrand').on('click', function () {
            var id = $(this).attr('data-id');
            $('#deleteConfirmPopup').modal('show');

            $('#confirmDeleteBtn').off('click').on('click', function () {
                $.ajax({
                    url: '@Url.Action("Delete", "BrandManage")', 
                    type: 'POST',
                    data: { ID_Brand: id }, 
                    success: function (response) {
                        if (response.result) {
                            alert('Xóa thành công');
                            location.reload();
                        } else {
                            alert('Xóa không thành công: ' + response.message);
                        }
                    },
                    error: function () {
                        alert('Có lỗi xảy ra khi xóa');
                    }
                });
                $('#deleteConfirmPopup').modal('hide');
            });
        });
    });
</script>