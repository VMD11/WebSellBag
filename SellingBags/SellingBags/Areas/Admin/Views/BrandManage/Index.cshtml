@model SellingBags.Areas.Admin.Models.ViewModel.BrandVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tất cả loại sản phẩm</h1>
    <p class="mb-4">
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body mt-2">
            <div class="w-100 mb-2">
                @Html.ActionLink("Thêm mới", "Create", "BrandManage", null, new { @class = "btn btn-success" })
            </div>
            <div class="table-responsive">
                <table class="table table-bordered mt-2" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>Tên thương hiệu</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @{
                        foreach (var item in Model.Brands)
                        {
                            <tr>
                                <td><img width="110" src="~/Assets/images/brands/@item.ImageURL" alt="@item.Name"></td>
                                <td>@item.Name.Trim()</td>
                                <td class="justify-content-center d-flex border-bottom-0">
                                    <a href="@Url.Action("Detail", "BrandManage", new {ID_Product = item.ID_Brand.Trim()})" class="btn btn-info w-25">Xem</a>
                                    <a href="@Url.Action("Edit", "BrandManage", new {ID_Product = item.ID_Brand.Trim()})" class="btn btn-warning w-25 mr-2 ml-2">Sửa</a>
                                    <button class="btn btn-danger w-25 deleteBtn" data-id="@item.ID_Brand">Xóa</button>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Xác nhận xóa Popup -->
    <div id="deleteConfirmPopup" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xác nhận xóa</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc muốn xóa thương hiệu này?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Xóa</button>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        // Xử lý sự kiện click trên nút "Xóa"
        $('.deleteBtn').on('click', function () {
            var id = $(this).attr('data-id');

            // Hiển thị xác nhận xóa trong modal
            $('#deleteConfirmPopup').modal('show');

            // Xử lý sự kiện click trên nút xác nhận xóa
            $('#confirmDeleteBtn').off('click').on('click', function () {
                // Gửi yêu cầu xóa thông qua AJAX
                $.ajax({
                    url: '@Url.Action("Delete", "BrandManage")', // Đường dẫn đến action Delete trong BrandController
                    type: 'POST',
                    data: { ID_Brand: id }, // Dữ liệu gửi đi (ID_Brand cần xóa)
                    success: function (response) {
                        if (response.result) {
                            alert('Xóa thành công');
                            // Thực hiện cập nhật giao diện sau khi xóa (nếu cần)
                            location.reload(); // Tải lại trang sau khi xóa
                        } else {
                            alert('Xóa không thành công: ' + response.message);
                        }
                    },
                    error: function () {
                        alert('Có lỗi xảy ra khi xóa');
                    }
                });

                // Đóng modal xác nhận xóa
                $('#deleteConfirmPopup').modal('hide');
            });
        });
    });
</script>
<!-- /.container-fluid -->
