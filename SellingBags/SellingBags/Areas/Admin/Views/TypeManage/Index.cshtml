@model SellingBags.Areas.Admin.Models.ViewModel.ProductTypeVM

@using SellingBags.Areas.Admin.Models.DataContext
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var Category = new ProductTypeContext();
}
<!-- Begin Page Content -->
<div class="container">


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="m-0 font-weight-bold">Tất cả loại sản phẩm</h5>
        </div>
        <div class="card-body">
            <div class="w-100 mb-3">
                @Html.ActionLink("Thêm mới", "Create", "TypeManage", null, new { @class = "btn btn-success" })
            </div>
            <div class="table-responsive">
                <table class="table table-bordered mt-2" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>Tên loại sản phẩm</th>
                            <th>Thể loại</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model.ProductTypes)
                            {
                                <tr>
                                    <td><img src="~/Assets/images/prodtypes/@item.ImageURL" alt="@item.Name" width="100" /></td>
                                    <td>@item.Name.Trim()</td>
                                    <td>@Category.GetCategory(item.ID_Category).Name</td>
                                    <td>
                                        <a href="@Url.Action("Detail", "TypeManage", new {ID_Type = item.ID_Type.Trim()})" class="btn btn-info w-100">Xem</a><br />
                                        <a href="@Url.Action("Update", "TypeManage", new {ID_Type = item.ID_Type.Trim()})" class="btn btn-warning w-100 mt-2">Sửa</a><br />
                                        <button class="btn btn-danger w-100 mt-2 deleteType" data-id="@item.ID_Type">Xóa</button>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Xác nhận xóa Popup -->
    <div id="deleteConfirmPopup" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xác nhận xóa</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc muốn xóa loại sản phẩm này?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Xóa</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.deleteType').on('click', function () {
            var id = $(this).attr('data-id');

            $('#deleteConfirmPopup').modal('show');

            $('#confirmDeleteBtn').off('click').on('click', function () {
                $.ajax({
                    url: '@Url.Action("Delete", "TypeManage")', 
                    type: 'POST',
                    data: { ID_Type: id }, 
                    success: function (response) {
                        if (response.result) {
                            alert('Xóa thành công');
                            location.reload(); 
                        } else {
                            alert('Xóa không thành công: ' + response.message);
                        }
                    },
                    error: function () {
                        alert('Có lỗi xảy ra khi xóa');
                    }
                });

                $('#deleteConfirmPopup').modal('hide');
            });
        });
    });
</script>