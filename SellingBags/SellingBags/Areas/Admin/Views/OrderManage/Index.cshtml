@model SellingBags.Areas.Admin.Models.ViewModel.OrderVM

@using SellingBags.Areas.Admin.Models.DataContext
@using SellingBags.Common
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var context = new OrderContext();
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="m-0 font-weight-bold">Tất cả đơn hàng</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered mt-2" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Khách hàng</th>
                            <th>Điện thoại</th>
                            <th>Địa chỉ</th>
                            <th>Mã ĐH</th>
                            <th>Ngày đặt</th>
                            <th>Giá trị</th>
                            <th>Duyệt</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model.Orders)
                            {
                                var Address = context.GetAddressByID(item.ID_Address);
                                <tr>
                                    <td>
                                        <a href="@Url.Action("Detail", "OrderManage", new {ID_Order = item.ID_Order})">

                                            @Address.LastName @Address.FirstName
                                        </a>
                                    </td>
                                    <td>@Address.PhoneNumber</td>
                                    <td>@Address.SpecificAddress, @Address.Ward, @Address.District, @Address.City</td>
                                    <td>@item.ID_Order</td>
                                    <td>@Converts.convertDateTime(item.OrderDate)</td>
                                    <td>@Converts.convertVND(item.TotalMoney)</td>
                                    <td>
                                        <a href="@Url.Action("", "OrderManage", new {ID_Order = item.ID_Order})" class="btn btn-success w-100 mb-2">Duyệt</a><br>
                                        <a href="@Url.Action("", "OrderManage", new {ID_Order = item.ID_Order})" class="btn btn-danger w-100">Hủy</a>
                                    </td>
                                    @*<td>
                                        <a href="@Url.Action("Detail", "OrderManage", new {ID_Order = item.ID_Order})" class="btn btn-info w-100">Xem</a><br />
                                    </td>*@
                                </tr>

                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Xác nhận xóa Popup -->
    <div id="deleteConfirmPopup" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xác nhận xóa</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc muốn xóa sản phẩm này?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Xóa</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        // Xử lý sự kiện click trên nút "Xóa"
        $('.deleteProduct').on('click', function () {
            var id = $(this).attr('data-id');

            // Hiển thị xác nhận xóa trong modal
            $('#deleteConfirmPopup').modal('show');

            // Xử lý sự kiện click trên nút xác nhận xóa
            $('#confirmDeleteBtn').off('click').on('click', function () {
                // Gửi yêu cầu xóa thông qua AJAX
                $.ajax({
                    url: '@Url.Action("Delete", "ProductManage")', // Đường dẫn đến action Delete trong BrandController
                    type: 'POST',
                    data: { ID_Product: id }, // Dữ liệu gửi đi (ID_Brand cần xóa)
                    success: function (response) {
                        if (response.result) {
                            alert('Xóa thành công');
                            // Thực hiện cập nhật giao diện sau khi xóa (nếu cần)
                            location.reload(); // Tải lại trang sau khi xóa
                            console.log(id);
                        } else {
                            alert('Xóa không thành công: ' + response.message);
                        }
                    },
                    error: function () {
                        alert('Có lỗi xảy ra khi xóa');
                    }
                });

                // Đóng modal xác nhận xóa
                $('#deleteConfirmPopup').modal('hide');
            });
        });
    });
</script>


