@model SellingBags.Models.ViewModel.LoginVM
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";


}
<div class="container-fluid">
    <div class="login-res">
        <div class="page-wapper">
            <div class="container">
                <div class="login-res-wapper ct-wapper">
                    <ul class="top-page">
                        <li class="active">
                            <a class="nav-link active" href="" role="tab">Đăng nhập</a>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Đăng ký", "Register", "Account", null, new { @class = "nav-link" })
                        </li>
                    </ul>
                    <div class="ct-form mb-5">
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="results-error">
                                <div class="error">
                                    <span>@ViewBag.Error_Text</span>
                                </div>
                            </div>
                            <div class="form-input">
                                <label>Số điện thoại hoặc Email</label>
                                <div class="mb-0">
                                    <input placeholder="Vd: 0123456789" name="UserName" class="username" value="@Model.UserName" />
                                </div>
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger", @style = "color: red; font-weight:600" })
                            </div>
                            <div class="form-input mb-0">
                                <label>Mật khẩu</label>
                                <div class="input-icon">
                                    <input type="password" placeholder="**********" id="passwordInput" name="Password" class="password" value="@Model.Password" />
                                    <div id="icon-showpass" class="icon-showpass p-2" onclick="showPass()">
                                        <i class="fa fa-eye-slash" id="eyeIcon"></i>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", @style = "color: red;font-weight:600" })
                            </div>
                            <a href="#!" class="forgotpassword">Bạn quên mật khẩu?</a>
                            <div class="g-action">
                                <button type="submit" class="btn hvr-hover border-0">Đăng nhập</button>
                            </div>
                            <div class="g-register mb-5">
                                <span>Bạn chưa có tài khoản? </span>
                                @Html.ActionLink("Đăng ký ngay", "Register", "Account", null, new { @class = "linkdirect" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

