<div class="shop-detail-box-main">
    <div class="container-fluid">
        <div class="w-100 justify-content-center d-flex">
            <div class="row container ">
                <div class="col-xl-5 col-lg-5 col-md-6">
                    <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active"> <img class="d-block w-100" src="~/Assets/images/products/@Model.Product.ImageURL" alt="First slide"> </div>
                            <div class="carousel-item"> <img class="d-block w-100" src="~/Assets/images/products/@Model.Product.ImageURL" alt="Second slide"> </div>
                            <div class="carousel-item"> <img class="d-block w-100" src="~/Assets/images/products/@Model.Product.ImageURL" alt="Third slide"> </div>
                        </div>
                        <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                            <i class="fa fa-angle-left" aria-hidden="true"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                            <span class="sr-only">Next</span>
                        </a>
                        
                    </div>
                </div>
                <div class="col-xl-7 col-lg-7 col-md-6">
                    <div class="single-product-details">
                        <input id="id_product" hidden value="@Model.Product.ID_Product">
                        <h2>@Model.Product.Name</h2>
                        <h5>@Converts.convertVND(Model.Product.Price) <del>@Converts.convertVND(Model.Product.Price)</del></h5>
                        <p class="available-stock"><span> @Model.Product.Quantity sản phẩm / <a href="">18 đã bán </a></span></p>
                        <div>
                            <div class="form-group size-st w-25">
                                <strong>Size</strong>
                                <div class="text-center w-50 bg-dark text-white p-1">@Model.Product.Size</div>
                            </div>

                            <div class="form-group quantity-box">
                                <strong>Số lượng</strong>
                                <div class="book-number">
                                    <div class="minus" id="minus"><i class="fa fa-minus"></i></div>
                                    <div class="input-number"><input type="number" name="Quantity" value="1" min="1" class="quantity" id="quantityInput"></div>
                                    <div class="plus" id="plus"><i class="fa fa-plus"></i></div>
                                </div>
                            </div>
                        </div>
                        <p><strong>Thương hiệu:</strong> @Model.Brand.ToUpper()</p>

                        <p>
                            <strong>Mô tả sản phẩm:</strong><br />
                            @Model.Product.Description
                        <p>

                            <div class="price-box-bar">
                                <div class="cart-and-bay-btn">
                                    <a class="btn hvr-hover text-white" id="orderButton">Mua ngay</a>
                                    <a id="addToCartButton" class="btn hvr-hover text-white">Thêm vào giỏ hàng</a>
                                </div>
                            </div>

                            <div class="add-to-btn">
                                <div class="add-comp">
                                    @if (context.IsWishListed(ID_Account, Model.Product.ID_Product))
                                    {
                                        <a class="btn hvr-hover" href="@Url.Action("RemoveToWishList", "Account", new {ID_Product = Model.Product.ID_Product.Trim()})"><i class="fa fa-heart"></i> Xóa khỏi yêu thích</a>

                                    }
                                    else
                                    {
                                        <a class="btn hvr-hover" href="@Url.Action("AddToWishList", "Account", new {ID_Product = Model.Product.ID_Product.Trim()})"><i class="far fa-heart"></i> Thêm vào yêu thích</a>

                                    }
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row my-5">
            <div class="col-lg-12">
                <div class="title-all text-center mt-5">
                    <h1>Sản phẩm tương tự</h1>
                </div>
                <div class="featured-products-box owl-carousel owl-theme">


                    @{
                        foreach (var item in Model.RelativeProductsList)
                        {
                            <div class="item p-2">
                                <div class="products-single fix">
                                    <div class="box-img-hover">
                                        <div class="type-lb">
                                            <p class="sale">@Model.Brand</p>
                                        </div>
                                        <img src="~/Assets/images/products/@item.ImageURL" class="img-fluid" alt="@item.Name">
                                        <div class="mask-icon">
                                            <ul>
                                                <li>
                                                    <a href="@Url.Action("Detail", "Product", new {ID_Product = item.ID_Product.Trim()})" data-toggle="tooltip" data-placement="right" title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </li>
                                                @if (context.IsWishListed(ID_Account, item.ID_Product))
                                                {
                                                    <li><a href="@Url.Action("RemoveToWishList", "Account", new {ID_Product = item.ID_Product.Trim()})" data-toggle="tooltip" data-placement="right" title="Xóa khỏi yêu thích"><i class=" fa fa-heart"></i></a></li>

                                                }
                                                else
                                                {
                                                    <li><a href="@Url.Action("AddToWishList", "Account", new {ID_Product = item.ID_Product.Trim()})" data-toggle="tooltip" data-placement="right" title="Thêm vào yêu thích"><i class="far fa-heart"></i></a></li>
                                                }
                                            </ul>
                                            <a class="cart" href="@Url.Action("Add", "Cart", new {ID_Product = item.ID_Product.Trim(), Quantity = 1})">Thêm vào giỏ hàng</a>
                                        </div>
                                    </div>
                                    <div class="why-text">
                                        <a href="@Url.Action("Detail", "Product", new {ID_Product = item.ID_Product.Trim()})">
                                            <h4>@item.Name</h4>
                                            <h5>@Converts.convertVND(item.Price) <del>@Converts.convertVND(item.Price)</del> </h5>
                                        </a>
                                    </div>
                                </div>

                            </div>
                        }
                    }
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row my-5">
            <div class="col-lg-12">
                <div class="title-all text-center mt-5">
                    <h1>Sản phẩm mới</h1>
                </div>
                <div class="featured-products-box owl-carousel owl-theme">
                    @{
                        foreach (var item in Model.NewProducts)
                        {
                            <div class="item p-2">
                                <div class="products-single fix">
                                    <div class="box-img-hover">
                                        <div class="type-lb">
                                            <p class="new">Mới</p>
                                        </div>
                                        <img src="~/Assets/images/products/@item.ImageURL" class="img-fluid" alt="@item.Name">
                                        <div class="mask-icon">
                                            <ul>
                                                <li>
                                                    <a href="@Url.Action("Detail", "Product", new {ID_Product = item.ID_Product.Trim()})" data-toggle="tooltip" data-placement="right" title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </li>
                                                @if (context.IsWishListed(ID_Account, item.ID_Product))
                                                {
                                                    <li><a href="@Url.Action("RemoveToWishList", "Account", new {ID_Product = item.ID_Product.Trim()})" data-toggle="tooltip" data-placement="right" title="Xóa khỏi yêu thích"><i class=" fa fa-heart"></i></a></li>

                                                }
                                                else
                                                {
                                                    <li><a href="@Url.Action("AddToWishList", "Account", new {ID_Product = item.ID_Product.Trim()})" data-toggle="tooltip" data-placement="right" title="Thêm vào yêu thích"><i class="far fa-heart"></i></a></li>
                                                }
                                            </ul>
                                            <a class="cart" href="@Url.Action("Add", "Cart", new {ID_Product = item.ID_Product.Trim(), Quantity = 1})">Thêm vào giỏ hàng</a>
                                        </div>
                                    </div>
                                    <div class="why-text">
                                        <a href="@Url.Action("Detail", "Product", new {ID_Product = item.ID_Product.Trim()})">
                                            <h4>@item.Name</h4>
                                            <h5>@Converts.convertVND(item.Price) <del>@Converts.convertVND(item.Price)</del> </h5>
                                        </a>
                                    </div>
                                </div>

                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Cart -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script type="text/javascript">

    document.addEventListener('DOMContentLoaded', function() {
        var addToCartButton = document.getElementById('addToCartButton');

        addToCartButton.addEventListener('click', function () {
            var id_product = document.getElementById('id_product').value;
            var quantity = document.getElementById('quantityInput').value;
            var url = '@Url.Action("Add", "Cart")' + '?ID_Product=' + id_product + '&Quantity=' + quantity;

            window.location.href = url;
        });
    }); 

    document.addEventListener('DOMContentLoaded', function() {
        var addToCartButton = document.getElementById('orderButton');

        addToCartButton.addEventListener('click', function () {
            var id_product = document.getElementById('id_product').value;
            var quantity = document.getElementById('quantityInput').value;
            var url = '@Url.Action("Add", "Cart")' + '?ID_Product=' + id_product + '&Quantity=' + quantity;

            window.location.href = url;
        });
    }); 



</script>