@model SellingBags.Models.DataContext.VirtualCartContext

@using SellingBags.Common
@using SellingBags.Converter
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Cart</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Shop</a></li>
                    <li class="breadcrumb-item active">Cart</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Cart  -->
<div class="cart-box-main">
    <div class="container">
        @if (Session[Sessions.CART] != null)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-main table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Ảnh</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Xóa</th>
                                </tr>
                            </thead>
                            <tbody>

                                @{
                                    decimal? TotalMoney = 0;
                                    int TotalQuantity = 0;
                                    foreach (var item in Model.GetList())
                                    {
                                        var data_id = item.Product.ID_Product;
                                        TotalMoney += item.Product.Price;
                                        TotalQuantity += item.Quantity;
                                        <tr id="@data_id">
                                            <td class="thumbnail-img">
                                                <img class="img-fluid" src="~/Assets/images/products/@item.Product.ImageURL" alt="" />
                                            </td>
                                            <td class="name-pr">
                                                <a href="@Url.Action("Detail", "Product", new { ID_Product = item.Product.ID_Product })">
                                                    @item.Product.Name
                                                </a>
                                            </td>
                                            <td class="price-pr">
                                                <p>@ConvertVND.convertVND(item.Product.Price)</p>
                                            </td>
                                            <td class="quantity-box"><input type="number" name="Quantity" size="4" value="@item.Quantity" min="1" step="1" data-id="@data_id" class="c-input-text qty text"></td>
                                            
                                            <td class="remove-pr delete">
                                                <a href="@Url.Action("Delete","Cart",new {ID_Product = item.Product.ID_Product})">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            </td>
                                        </tr>


                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row my-5">
                <div class="col-lg-6 col-sm-6">
                    <div class="coupon-box">
                        <div class="input-group input-group-sm">
                            <input class="form-control" placeholder="Enter your coupon code" aria-label="Coupon code" type="text">
                            <div class="input-group-append">
                                <button class="btn btn-theme" type="button">Apply Coupon</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-sm-6">
                    <div class="update-box">
                        <input value="Update Cart" type="submit">
                    </div>
                </div>
            </div>

            <div class="row my-5">
                <div class="col-lg-8 col-sm-12"></div>
                <div class="col-lg-4 col-sm-12">
                    <div class="order-box">
                        @*<h3>Order summary</h3>*@
                        <div class="d-flex">
                            <h4>Giá trị đơn hàng</h4>
                            <div class="ml-auto font-weight-bold" id="grandTotal">@ConvertVND.convertVND(TotalMoney)</div>
                        </div>
                        <div class="d-flex">
                            <h4>Số lượng</h4>
                            <div class="ml-auto font-weight-bold" id="TotalQuantity">@TotalQuantity</div>
                        </div>
                        <div class="d-flex">
                            <h4>Giảm tiền</h4>
                            <div class="ml-auto font-weight-bold">0</div>
                        </div>
                        <hr>
                        <div class="d-flex gr-total">
                            <h5>Thành tiền</h5>
                            <div class="ml-auto h5" id="TotalMoney">@ConvertVND.convertVND(TotalMoney)</div>
                        </div>
                        <hr>
                    </div>
                </div>
                <div class="col-12 d-flex shopping-box"><a href="@Url.Action("Index", "Checkout")" class="ml-auto btn hvr-hover">Thanh toán</a> </div>
            </div>
        }
        else
        {
                <div class="row">
                    <div class="col-12">
                        <h2>Bạn chưa có sản phẩm nào trong giỏ hàng</h2>
                        <h5>Có nhiều sản phẩm mới đợi bạn thêm sản phẩm vào giỏ hàng</h5>
                    </div>
                    <div class="col-12">
                        @Html.ActionLink("Dạo một vòng", "Index", "Home", null, new {@class= "btn hvr-hover" })
                    </div>
                </div>                        
        }
        
    </div>
</div>
<!-- End Cart -->

<script type="text/javascript">
    $(document).ready(function () {
    $('.qty').on('change', function () {
        var productId = $(this).attr('data-id');
        var newQuantity = parseInt($(this).val());

        $.ajax({
            url: '@Url.Action("Update", "Cart")',
            type: 'POST',
            data: {
                id: productId,
                quantity: newQuantity
            },
            success: function (data) {
                // Kiểm tra console để xem dữ liệu trả về từ server
                console.log(data);

                // Cập nhật lại giao diện
                $('#grandTotal').text(ConvertVND.convertVND(data.TotalMoney));
                $('#TotalQuantity').text(data.TotalQuantity);
                $('#TotalMoney').text(ConvertVND.convertVND(data.TotalMoney)); // Thành tiền = giá trị đơn hàng
            },
            error: function () {
                alert('Có lỗi xảy ra khi cập nhật số lượng.');
            }
        });
    });
});



</script>
