@{
    DB.SellingBagsEntities db = new DB.SellingBagsEntities();
    List<DB.Category> Categories = db.Categories.ToList();
    var cart = (CartContext)Session[Sessions.CART];

    var count = 0;
    if(cart != null)
    {
        foreach(var item in cart.GetList())
        {
            count += item.Quantity;
            
        }
    }
}

